extends ../ui_layout-esp

block content
  
  .ui.text.container.addBottomMargin
    br
    .ui.raised.segment
      h2.ui.header
        .content ¿Qué debes hacer si accidentalmente caes en una estafa de phishing?
        
      .ui.mini.green.right.labeled.icon.button.showReviewSectionButton
        i.down.arrow.icon
        |   Comenzar
      .ui.basic.segment.reviewSegment.hidden
        .sub.header 
          .ui.compact.segment
            .ui.large.read-only.checked.checkbox.exampleCheckbox
              input.ui(type="checkbox" id="" checked="")
              label Lee y marca todas las casillas que se muestran a continuación
          br
        .content.ui.list
            .item
              #item1.ui.segment
                .ui.checkbox
                  input.checkbox.ui(type="checkbox")#checkbox1
                  label 
                    | En caso hayas dado tu contraseña en un post de phishing, 
                    | cámbiala inmediatamente. Si usas esa contraseña para otras 
                    | cuentas, cámbialas también.
            .item
              #item2.ui.segment
                .ui.checkbox
                  input.checkbox.ui(type="checkbox")#checkbox2
                  label 
                    | Reporta el post de phishing a la red social para que la 
                    | puedan eliminar.
            .item
              #item3.ui.segment
                .ui.checkbox
                  input.checkbox.ui(type="checkbox")#checkbox3
                  label 
                    | Conversa con un adulto de confianza. Te podrá ayudar a 
                    | seguir los pasos correctos para proteger tu identidad.
                  
    br
    .ui.warning.message.clickNextWarning.hidden
      .header
       | Clic "Comenzar"
    .ui.warning.message.hidden#checkAllWarning
      .header
        | Revisa todas las casillas para continuar
    .ui.big.labeled.icon.button#phishingTutGuideButton
        i.rocket.icon
        |   ¡Entendido!

block scripts
  script.
    var voiceoverMappings = {
      '.showReviewSectionButton': {
        "initialDelay": 500,
        "delay": 500,
        "files": ['CUSML.3.4.1.mp3','CUSML.3.4.2.mp3','CUSML.3.4.3.mp3','CUSML.3.4.4.mp3']
      }
    };
  script(src="/module_js/phishing-esp/phishing-esp_tut_guide.js")
  script(src='/module_js/voiceover.js')
block styles 
  link(rel='stylesheet' href='/css/checkbox_activity.css')
