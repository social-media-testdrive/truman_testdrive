
extends ../ui_layout
  
block content
  -var cdn = "https://dhpd030vnpk29.cloudfront.net";
  .computer.only.tablet.only.four.wide.column 
  .eight.wide.computer.ten.wide.tablet.sixteen.wide.mobile.column()
    .ui.one.column.centered.grid.feedbackMessagesGrid
      .ui.fixed.bottom.sticky
        .ui.icon.compact.hidden.message.warning#clickNextHelpMessage
          i.close.icon
          i.question.icon.float
          .content
            .ui.header ¿Necesitas ayuda?
            p ¡Sube y dale clic a “Siguiente” para comenzar!
    #step1.ui.fluid.card.test       
      .content
        .right.floated.meta= "Ayer"
        |
        a(href='')
          img.ui.avatar.image(src=cdn+'/profile_pictures/user55.jpg')
          span='Dylan Martínez'
      .image
        img.post(src=cdn+"/post_pictures/basketballshoes.jpg")
      .content
        .description="Wow, mira estas nuevas e increíbles zapatillas :D"
      .three.ui.bottom.attached.icon.buttons
        .ui.reply.button(tabindex='0')
          i.reply.icon
          |  Responder
        .ui.flag.button(tabindex='0')
          i.flag.icon
          |  Reportar
        .ui.labeled.button(tabindex='0')
          .ui.like.button
            i.heart.icon
            |  Like
          a.ui.basic.red.left.pointing.label.count=2
          
      .content
        .ui.comments
          .comment
            a.avatar
              img(src=cdn+'/profile_pictures/user66.jpeg')
            .content
              a.author Florencia Pérez
              .metadata
                span.date Ayer
                .rating
                  i.heart.icon
                  span.num=0
                  |  Likes
              #step3.text()
                | Cuando entenderás que nadie quiere saber de ti
              #step5.actions
                a.comment.like Like
                a.flag Reportar
      .content
        #step7.ui.fluid.left.labeled.right.icon.input()
          .ui.label
            img.ui.avatar.image(src=cdn+'/profile_pictures/'+user.profile.picture, name=user.profile.name)
          input.newcomment(type='text' placeholder='Write a Comment')
          i.big.send.link.icon


block scripts
  script(src='/postFunctionalities.js')
  script(src="/module_js/cyberbullying-esp/cyberbullying-esp_tutorial.js")
  script(src="/module_js/voiceover.js")
  script(src="/module_js/base_introSteps.js")
  script(src='/module_js/base_tutorial.js')
