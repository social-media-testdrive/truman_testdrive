extends ../ui_layout

block content
  -var cdn = "https://dhpd030vnpk29.cloudfront.net";
  .twelve.wide.computer.fourteen.wide.tablet.sixteen.wide.mobile.column.centered
    br
    .ui.raised.segment(style="text-align:center; width:100%; margin:0 0;")
      h3.ui.block.center.aligned.header(style="background: linear-gradient(to right, #FCF6BD 0%, #D0F4DE 25%,#A9DEF9 50%,#E4C1F9 100%);")
        //- i.bullhorn.blue.icon
        | Welcome to Social Media TestDrive!

      a.ui.card.welcomePageCard(style="display:inline-block;")
        .image
          img(src=cdn+'/privateinfo.png')
        .content
          .header="Is It Private Information?"
      
      h3.ui.center.aligned.header
        | Here's what you're about to do!


      .ui.tiny.four.steps
        .step.glowing-box#learn(data-color="#FCF6BD",style="background-color: #FCF6BD !important;")
          i.book.icon
          .content
            .title LEARN
            .title(style="background-color: #FCF6BD !important;") key ideas
        .step.glowing-box#practice(data-color="#D0F4DE",style="background-color:  #D0F4DE !important;") 
          i.edit.icon
          .content
            .title PRACTICE
            .title( style="background-color: #D0F4DE !important;") social media skills
        .step.glowing-box#explore(data-color="#A9DEF9", style="background-color:  #A9DEF9 !important") 
          i.binoculars.icon
          .content
            .title EXPLORE
            .title(style="background-color: #A9DEF9 !important")  the social media timeline
        .step.glowing-box#reflect(data-color="#E4C1F9",style="background-color: #E4C1F9 !important;") 
          i.question.icon
          .content
            .title REFLECT
            .title(style="background-color:#E4C1F9 !important;")  on what you did

    .ui.basic.segment(style="text-align:center; padding-bottom:4em;")
      a(href='javascript:void(0);', onclick='javascript:startIntro();')
          .ui.big.green.labeled.icon.button.welcomeButton
              i.rocket.icon
              |   Click here to get started!
    br
    br
    br
   

   
block scripts
