extends ../ui_layout

block content

  .ui.text.container.addBottomMargin
    br
    .column
      .ui.raised.segment
        .ui.blue.ribbon.label
          h3
            i.history.icon
            | &nbsp Let's review!
        br
        .ui.mini.green.right.labeled.icon.button.showReviewSectionButton
          i.down.arrow.icon
          |   Next  
        .ui.basic.segment.reviewSegment.hidden
          h5.ui.header
            i.arrow.circle.right.blue.icon
            .content
              |  Phishing scams on social media happen when a scammer poses as an institution or your friend and posts a message asking you to provide private information.
                        
          h5.ui.header
            i.arrow.circle.right.blue.icon
            .content
              | Scammers can use shortened URLs to trick you into clicking on risky websites. Phishing scams can also have spelling or grammar errors, misleading images, and deals that sound too good to be true.
      
          h5.ui.header
            i.arrow.circle.right.blue.icon
            .content
              | If you see a phishing scam, you can:
              
          h5.ui.header
            i.circle.bullet.blue.icon.addIndent
            .content
              |   Ignore the link and don’t click on it
              
          h5.ui.header
            i.circle.bullet.blue.icon.addIndent
            .content
              |   “Flag” the post to report it to the website    
    
    br
    br
    .ui.warning.message.clickNextWarning.hidden
      .header
       | Click "Next"
    a(href='javascript:void(0);', onclick='javascript:clickGotIt();')
        .ui.big.labeled.icon.button.gotItButton
            i.rocket.icon
            |   Got it!

block scripts
  script().
    var voiceoverMappings = {
      '.showReviewSectionButton': {
        "initialDelay": 700,
        "delay": 500,
        "files": ['CUSML.3.6.1.mp3','CUSML.3.6.2.mp3', 'CUSML.3.6.3.mp3']
      }
    };
    var nextPage = 'trans_script';
  script(src="/module_js/voiceover.js")  
  script(src="/module_js/base_trans.js")

block styles
  link(rel='stylesheet', href='/css/trans.css')  
