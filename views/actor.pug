            img(src=actor.profile.picture)
          else
            img(src=cdn+'/profile_pictures/'+actor.profile.picture)
        .content
          a.header= actor.profile.name
          .meta="@"+actor.username
          .description=actor.profile.bio
          .description 
            i.marker.icon
            span=actor.profile.location
