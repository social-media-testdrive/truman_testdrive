extends ../ui_layout

block content

  .ui.text.container.addBottomMargin
    br
    .column
      .ui.raised.segment
        .ui.blue.ribbon.label
          h3
            i.history.icon
            | &nbsp Let's review!
        br
        .ui.mini.green.right.labeled.icon.button.showReviewSectionButton
          i.down.arrow.icon
          |   Next  
        .ui.basic.segment.reviewSegment.hidden
          h5.ui.header
            i.arrow.circle.right.blue.icon
            .content
              | <b>Cyberbullying</b> is when someone posts or shares negative 
              | things about someone else online. The <b>bully</b> may use digital 
              | devices, sites, or apps. The bully often does this again and again 
              | to the same person.    
          h5.ui.header
            i.arrow.circle.right.blue.icon
            .content
              | An <b>upstander</b> will confront the bully, or support and defend 
              | the target.      
          h5.ui.header
            i.arrow.circle.right.blue.icon
            .content
              | You can also <b>flag</b> the comment or tell a trusted adult.
          br
    br
    br
    .ui.warning.message.clickNextWarning.hidden
      .header
       | Click "Next"
    a(href='javascript:void(0);', onclick='javascript:clickGotIt();')
      .ui.big.labeled.icon.button.gotItButton
          i.rocket.icon
          |   Got it!

block scripts
  script.
    var voiceoverMappings = {
      '.showReviewSectionButton': {
        "initialDelay": 700,
        "delay": 500,
        "files": ['CUSML.6.5.1.mp3','CUSML.6.5.2.mp3','CUSML.6.5.3.mp3']
      }
    };
    var nextPage = 'trans_script';
  script(src="/module_js/voiceover.js")  
  script(src="/module_js/base_trans.js")
    
block styles
  link(rel='stylesheet', href='/css/trans.css')  
