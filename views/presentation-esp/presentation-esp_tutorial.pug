              i.flag.icon
              |  Reportar
            .ui.labeled.button(tabindex='0')
              .ui.like.button
                i.heart.icon
                |  Like
              a.ui.basic.red.left.pointing.label.count=2  
          .content
            .ui.comments
              .comment
