extends ../ui_layout

block content
  -var cdn = "https://dhpd030vnpk29.cloudfront.net";
  .ui.container.resultsAddBottomMargin
    .ui.stackable.column.grid
      .ui.column
        .insertPrint
        .ui.raised.segment.reflectionTopSegment
          h3.ui.header
            i.question.blue.icon
            .content
              | Reflect
          
          .ui.mini.green.right.labeled.icon.button.reflectionSegmentButton.voiceover_reflection1
            i.down.arrow.icon
            |   Start
          .ui.basic.segment.reflectionPromptSegment.hidden.selectPostsQuestion1   
            .ui.label.resultsPromptLabel
              h4
                i.exclamation.triangle.icon

                | These were the posts that would have a negative impact on 
                | peopleâ€™s digital footprints. How many did you notice?
            br
            br
            h3.grayElement(style="color:#696969;")
              i.hand.pointer.icon
              | Click on the ones that you noticed!
            .ui.stackable.three.cards.selectablePosts
              
              .ui.fluid.card.dim()#card1
                .content
                  .right.floated.time 30 minutes ago
                  a(href='/user/k.r.h345')
                    img.ui.avatar.image(src=cdn+'/profile_pictures/user15.jpg')
                    span Keith Hernandez
                .image
                  img.post(src=cdn+'/post_pictures/angrycat2.jpg')
                .content
                  .description
                    | Does this cat remind anyone else of Mrs. Lee?? She's always 
                    | glaring at us lol. Why does she have to suck SO MUCH
          
            
              .ui.fluid.card.dim()#card2
                .content
                  .right.floated.time 48 minutes ago
                  a(href='/user/ryguy76')
                    img.ui.avatar.image(src=cdn+'/profile_pictures/user74.jpg')
                    span Ryan Freyer
                .image
                  img.post(src=cdn+'/post_pictures/facepalm.jpg ')
                .content
                  .description Lol Danny didn't want me telling anyobody but he 
                  | tripped over a rock and twisted his ankle. He is literally a 
                  | meme. 


              .ui.fluid.card.dim()#card3
                .content
                  .right.floated.time 1 hour ago
                  a(href='/user/ella_vaderrr')
                    img.ui.avatar.image(src=cdn+'/profile_pictures/user25.jpg')
                    span Ella Sroni
                .image
                  img.post(src=cdn+'/post_pictures/backtoschool.jpg')
                .content
                  .description 
                    | First day of grade 7! come over to my house at 22 Eastwood 
                    | dr if you want to hang
         
        .ui.basic.segment.noPadding.hidden.reflectionTopSegment
          .ui.raised.segment
            .ui.mini.green.right.labeled.icon.button.reflectionSegmentButton.voiceover_reflection2
              i.down.arrow.icon
              |   Next
            .ui.basic.segment.noPadding.reflectionPromptSegment.hidden 
              .ui.label.resultsPromptLabel
                h4.reflectionCheckboxesPrompt(data-questionNumber='Q1')
                  | #{reflectionData.digfoot.Q1.prompt}
              .ui.stackable.two.cards.checkOne
        
                .ui.fluid.card.dim()#card1
                  .content
                    .right.floated.time 30 minutes ago
                    a(href='/user/k.r.h345')
                      img.ui.avatar.image(src=cdn+'/profile_pictures/user15.jpg')
                      span Keith Hernandez
                  .image
                    img.post(src=cdn+reflectionData.digfoot.Q1.groupPostImages[0])
                  .content
                    .description
                      | #{reflectionData.digfoot.Q1.groupPostDescriptions[0]}
            
        
                .ui.fluid.card.dim()
                  .content
                    .ui.form
                      .inline.fields
                        label(for='overshare', name='overshare') 
                        .field
                          .ui.checkbox
                            input(type='checkbox')
