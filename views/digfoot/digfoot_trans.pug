extends ../ui_layout

block content

  .ui.text.container.addBottomMargin
    br
    .column
      .ui.raised.segment
        .ui.blue.ribbon.label
          h3
            i.history.icon
            | &nbsp Let's review!
        br
        .ui.mini.green.right.labeled.icon.button.showReviewSectionButton
          i.down.arrow.icon
          |   Next  
        .ui.basic.segment.reviewSegment.hidden
          h5.ui.header
            i.arrow.circle.right.blue.icon
            .content
              | All of your actions on social media create a <b>digital 
              | footprint</b>. This includes any information you share about 
              | yourself and any posts that you have created.

          h5.ui.header
            i.arrow.circle.right.blue.icon
            .content
              | Remember to think before you post! Try to avoid oversharing about 
              | yourself and others. 
                      
          h5.ui.header
            i.arrow.circle.right.blue.icon
            .content
              | Think about ways you can create a positive digital footprint! 
          br
  
    br
    br
    a(href='javascript:void(0);', onclick='javascript:clickGotIt();')
      .ui.big.labeled.icon.button.gotItButton
          i.rocket.icon
          |   Got it!
            
