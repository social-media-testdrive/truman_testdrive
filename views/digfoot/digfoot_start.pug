  script.
    var voiceoverMappings = {
      '.showLearnSectionButton': {
        "initialDelay": 700,
        "delay": 1000,
        "files": ['CUSML.4.1.1.mp3','CUSML.4.1.2.mp3']
      },
      '.voiceover_keyTerm1': {
        "initialDelay": 700,
        "delay": 0,
        "files": ['CUSML.4.2.1.mp3']
      },
      '.voiceover_keyTerm2': {
        "initialDelay": 700,
        "delay": 0,
        "files": ['CUSML.4.2.2.mp3']
      },
      '.voiceover_keyTerm3': {
        "initialDelay": 700,
        "delay": 0,
        "files": ['CUSML.4.2.3.mp3']
      }
    };
    const enableDataCollection = #{enableDataCollection}
  script(src='/module_js/voiceover.js')
  script(src="/module_js/base_start.js")

