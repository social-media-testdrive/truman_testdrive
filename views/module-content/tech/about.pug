      .row
        .sixteen.wide.column
          .speech-div
            .centerme
              if user.moduleProgress && user.moduleProgress.tech && user.moduleProgress.tech.link === "/course-player?module=tech&section=challenge&page=intro" 
                button.ui.massive.blue.button(onclick=`window.location='${user.moduleProgress.tech.link}'`) Start Mission
              else if user.moduleProgress && user.moduleProgress.tech
                button.ui.massive.blue.button(onclick=`window.location='${user.moduleProgress.tech.link}'`) Continue Mission

            img.dart_image.ui.medium.image(src=user.avatarImg)

            .ui.large.label.blue-pointing#speechBubble
              if user.moduleProgress && user.moduleProgress.tech && user.moduleProgress.tech.link === "/course-player?module=tech&section=challenge&page=intro" 
                p#speechText
                  | The Johnsons are counting on you! Click 'Start Mission' to begin. 
              else if user.moduleProgress && user.moduleProgress.tech
                p#speechText
                  | Welcome back! Click 'Continue Mission' to pick up where you left off.
    .ui.centered.grid.mobile.only
      if user.moduleProgress && user.moduleProgress.tech && user.moduleProgress.tech.link === "/course-player?module=tech&section=challenge&page=intro" 
        button.ui.massive.blue.button(onclick=`window.location='${user.moduleProgress.tech.link}'` style="margin-top: 0px; margin-bottom: 60px;") Start Mission
      else if user.moduleProgress && user.moduleProgress.tech
        button.ui.massive.blue.button(onclick=`window.location='${user.moduleProgress.tech.link}'` style="margin-top: 0px;  margin-bottom: 60px;") Continue Mission

