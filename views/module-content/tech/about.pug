extends ../../ui_layout

block content
  .ui.container
    br
    .ui.breadcrumb
      a.section(href="/") Home
      i.right.angle.icon.divider
      a.section(href="/courses") Missions
      i.right.angle.icon.divider
      .active.section Tech Support Scams
    br
    h1.ui.header.red#mod-title(style="font-weight: bold !important;") Tech Support Scams
    .ui.top.attached.fluid.segment
      .ui.grid 
        .row
          .eight.wide.column#classification
            strong CLASSIFICATION: 
            | TOP SECRET 
          .eight.wide.column#classified-by 
            strong CLASSIFIED BY: 
            | DART HQ
    .ui.attached.segment#middle-section-outline
      .ui.grid 
        .row 
          .twelve.wide.column
            p Sarah needs your help! Sheâ€™s fallen victim to a cunning tech support scam.
            p Uncover how scammers pose as distressed grandchildren to manipulate their targets into sending money. You'll learn how these scams work, how to spot them, and how to protect yourself and others.
            if user.moduleProgress && user.moduleProgress.tech && user.moduleProgress.tech.link === "/course-player?module=tech&section=challenge&page=intro" 
              button.ui.huge.blue.button(onclick=`window.location='${user.moduleProgress.tech.link}'`) Start Mission
            else if user.moduleProgress && user.moduleProgress.tech
              button.ui.huge.blue.button(onclick=`window.location='${user.moduleProgress.tech.link}'`) Continue Mission

          .four.wide.column 
            img(src=`${public_resources}/images/shared_sources/johnson.png`)
      br

      hr
      
      h2.ui.header.centered#learn-title(style="font-weight: 500 !important;")  
        .content
          i.search.icon
          | Activities
      .ui.vertical.basic.segments#course-outline
