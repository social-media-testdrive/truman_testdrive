          .ui.grid
            .row
              .two.wide.centered.column
                if(user.moduleStatus && user.moduleStatus.tech && user.moduleStatus.tech.challenge === 100)
                  span.fake-checkbox.completed
                else
                  span.fake-checkbox
              .nine.wide.column
                h3 Challenge
              .five.wide.right.aligned.column
                .ui.blue.inverted.button.small(onclick="window.location='/course-player?module=tech&section=challenge&page=intro'") Start
        .ui.divider
        .ui.basic.segment
          .ui.grid
