extends ../ui_layout-esp

block content
  
  .computer.only.tablet.only.four.wide.column 
  .eight.wide.computer.ten.wide.tablet.sixteen.wide.mobile.column()
    .ui.one.column.centered.grid.feedbackMessagesGrid
      .ui.fixed.bottom.sticky
        .ui.icon.compact.hidden.message.warning#clickNextHelpMessage
          i.close.icon
          i.question.icon.float
          .content
            .ui.header ¿Necesitas ayuda?
            p ¡Desplaza hacia arriba y haz clic en "Seguir" para comenzar!
        .ui.icon.compact.message.warning#removeHidden
          i.close.icon
          i.question.icon.float
          .content
            .ui.header ¿Necesitas ayuda? 
            p ¡Asegúrate de hacer clic en "Listo" en los puntos azules!
          
        .ui.icon.message.warning#clickAllDotsWarning
          i.close.icon
          i.hand.pointer.icon.float
          .content
            .ui.header ¡Todavía quedan puntos azules por encontrar!
            p Haz clic en todos los puntos azules para continuar.
            
    #step1.ui.container.addTopMargin
      h2.ui.header Configuraciónes de privacidad
      br
      
      br.ui.divider
      form.ui.form
        .grouped.fields#hint1
          label.sectionTitle(for='account') Configuraciónes de cuenta 
            .field#hint2
              br
              .ui.toggle.checkbox(name='publicToggle')
                  input(type='checkbox' name='isPrivate')
                  label Cuenta Privada
            span.settingSmallLabel Cuando su cuenta es privada, solo las personas que usted aprueba pueden ver sus publicaciones.
            br
            br
            
      .ui.divider
      br
      form.ui.form
        .grouped.fields
            label.sectionTitle(for='interaction') Configuraciónes de Interacción
            br
            br
            label.subsectionTitle(for='contacts') Contactos
            .field#hint3
              br
              label.standardLabel Permititr solicitudes de amistad de
                .div
                .ui.selection.dropdown(name='friendRequestsDropdown')
                  input(type='hidden' name='friendRequests')
                  i.dropdown.icon
                  .default.text Seleccionar
                  .menu
                    .item(data-value='0') Todos
                    .item(data-value='1') Amigos de amigos
            br
            .field
              label.standardLabel ¿Quién puede ver mi lista de amigos?
                .div
                .ui.selection.dropdown(name='friendListDropdown')
                  input(type='hidden' name='friendList')
                  i.dropdown.icon
                  .default.text Seleccionar
                  .menu
                    .item(data-value='0') Todos
                    .item(data-value='1') Amigos de amigos
                    .item(data-value='2') Amigos
                    .item(data-value='3') Solo yo
            br
            label.subsectionTitle(for='comments') Comentarios
            .field
              br
              label.standardLabel Permitir comentarios de
                .div
                .ui.selection.dropdown(name='commentsListDropdown')
                  input(type='hidden' name='commentsList')
                  i.dropdown.icon
                  .default.text Seleccionar
                  .menu
                    .item(data-value='0') Todos
                    .item(data-value='1') Amigos de amigos
                    .item(data-value='2') Amigos
                    .item(data-value='3') Solo yo
            br
            .field
              label.standardLabel Bloquear comentarios de
              .div
                select.ui.fluid.search.dropdown.blocklistDropdown(multiple='')
                  option Nombre F.
                  option Soyun Robot
                  option Carolina Jara
                  option María Cristina Rodríguez
                  option Ana Pereira
                  option Sandra Gómez
                  option Laura Ochoa
                  option Roberto Sánchez
                  option Juana Ramirez
                  option Alonso Contreras
                  option Camilo Rojas
                  option Carmen García
                  option Julio César Hernandez
                  option Sara Segovia
                  option Luis Alberto Torres
                  option Eugenia Espósito
                  option María Villalobos
                  option Antonio Da Silva
                  option Daniel Ríos
                  option David López
                  option Valery Reyes
                  option Maria Alejandra Sanchez
                  option Milagros Cardenas
                  option Valeria Vargas
            br
            label.subsectionTitle(for='tags') Etiquetas
              .field
                br
                .ui.toggle.checkbox(name='tagToggle1')
                  input(type='checkbox' name='allowTags' checked='checked')
                  label Permitir etiquetas
              .field
                .ui.toggle.checkbox(name='tagToggle2')
                  input(type='checkbox' name='addTags' checked='checked')
                  label Agregar automáticamente publicaciones etiquetadas a mi feed
                  br
                  br
      .ui.divider
      br
      form.ui.form
        .grouped.fields
            label.sectionTitle(for='information') Configuración de ubicación
              .field#hint4
                br
                .ui.toggle.checkbox(name='locationToggle')
                  input(type='checkbox' name='shareLocation' checked='checked')
                  label Activar la función de compartir ubicación
            .field#hint5
              br
              label.standardLabel Compartir mi ubicación con
                .div
                .ui.selection.dropdown(name='shareLocationWithToggle')
                  input(type='hidden' name='shareLocationWith')
                  i.dropdown.icon
                  .default.text Seleccionar
                  .menu
                    .item(data-value='0') Todos
                    .item(data-value='1') Amigos de amigos
                    .item(data-value='2') Amigos
                    .item(data-value='3') Solo yo
            br
            .ui.divider
            br
    .ui.message.warning.hidden#confirmContinueCheck
      .ui.header 
        | ¿Estás seguro de que no quieres hacer algún cambio en la configuración de tu privacidad antes de continuar?
    button.ui.big.labeled.icon.button.privacyesptrans2.addBottomMargin#cyberTransButton
          i.rocket.icon
          |   ¡Listo!

block scripts
  script(src="/module_js/privacy-esp/privacy_sim.js")
  script(src="/module_js/voiceover.js")
  script(src="/module_js/base_sim.js")
    
block styles
  link(rel='stylesheet', href='/css/sim.css')
  link(rel='stylesheet', href='/css/modules/privacy.css')