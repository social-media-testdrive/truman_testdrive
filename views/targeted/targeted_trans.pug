  script.
    var voiceoverMappings = {
      '.showReviewSectionButton': ['CUSML.2.6.1.mp3','CUSML.2.6.2.mp3','CUSML.2.6.3.mp3']
    };
    var nextPage = 'trans2';
  script(src="/module_js/voiceover.js")  
  script(src="/module_js/base_trans.js")
  
