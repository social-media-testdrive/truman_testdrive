  script(src='/user_portal/moduleOverview.js')

  
block styles
  link(rel='stylesheet', href='/css/teacherDashboard/sideMenu.css')
  link(rel='stylesheet', href='/css/teacherDashboard/classOverview.css')
  link(rel='stylesheet', href='/css/teacherDashboard/moduleOverview.css') 
