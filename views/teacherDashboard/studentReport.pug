extends ../ui_layout

block content

  .sixteen.wide.column.dashboardContentColumn.hiddenVisibility
    include ../partials/teacherDashboardMenu

    .row.addMargin
      .sixteen.wide.column

        h2 Step 1: Select Class
        .row
          .ui.selection.dropdown(name="classSelection")
            input(type="hidden")
            i.dropdown.icon
            .default.text Select a Class
            .menu
        .row
          .ui.labeled.icon.button.confirmClassButton
            i.check.icon
            | Confirm
            
        .row
          .ui.testDriveBlueButton.icon.labeled.button.updateClassButton.hidden 
            i.undo.alternate.icon
            | Select Different Class

        .row
          h2.usernameSelectionStepLabel.hidden Step 2: Select Student
          select.ui.search.dropdown.usernameSelection.hidden(name="usernameSelection")
            option(value='') Search...
        .row
          .ui.icon.labeled.button.getReportButton.hidden 
            i.check.icon
            | Get Student Report


    .row.addMargin
      .ui.basic.segment(style="padding:0;")#studentReportSegment
