extends ../ui_layout

block content
  .eight.wide.computer.ten.wide.tablet.sixteen.wide.mobile.column
    .ui.one.column.centered.grid.feedbackMessagesGrid
      .ui.fixed.bottom.sticky
        include ../partials/messages/clickNextMessage
        include ../partials/messages/removeHiddenMessage
        include ../partials/messages/clickAllDotsMessage
    .ui.raised.segment#generalStep
      h2.ui.header Create An Account
      .ui.form
        .field
          label.addFieldSpacingBottom Username
          div#hint1 
          input.addFieldSpacingTop(readonly='' type="text" name='username' autocomplete='off')
          .ui.warning.message#usernameWarning
            .header Try creating a username
        br
        .field
          label.addFieldSpacingBottom Password
          div#hint2
          input.addFieldSpacingTop#customPasswordInput(readonly='' type="text" name="password" autocomplete='off')  
          //- https://stackoverflow.com/a/49304708
        .ui.warning.message#passwordWarning
          .header Try creating a password 
      #passwordStrength.ui.indicating.small.progress(data-value='0' data-total='5')
        .bar
      h3#strengthLabel Password Strength
      .ui.message.hidden#feedbackMessage
        ul#feedbackSuggestion
      .ui.message.warning.hidden#confirmContinueCheck
        .ui.header 
          | This password seems weak and easy to guess, are you sure you want to use it? 
    button.ui.big.labeled.icon.button.mb-9.cybersim2#cyberTransButton
        i.rocket.icon
        |   Let's Continue!      
          
block scripts
  script(src=cdn+'/js/lib/zxcvbn.js')
  script(src="/module_js/accounts/accounts_sim.js")
  script(src="/module_js/base_sim.js")
  script(src="/module_js/voiceover.js")
  
block styles
  link(rel='stylesheet', href='/css/modules/accounts.css')
  link(rel='stylesheet', href='/css/sim.css')