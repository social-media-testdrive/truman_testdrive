extends ../ui_layout

block content

  -var cdn = "https://dhpd030vnpk29.cloudfront.net";

  .computer.only.tablet.only.four.wide.column

  .eight.wide.computer.ten.wide.tablet.sixteen.wide.mobile.column
    .ui.one.column.centered.grid(style="padding-top:1em;")
      .ui.fixed.bottom.sticky(style="padding-bottom:6em;")
        .ui.icon.compact.message.warning(style="display:none;")#removeHidden
          i.close.icon
          i.question.icon.float
          .content
            .ui.header Need some help? 
            p Make sure you are clicking "Got it" on the blue dots!
          
        .ui.icon.message.warning(style="display:none;")#clickAllDotsWarning
          i.close.icon
          i.hand.pointer.icon.float
          .content
            .ui.header There are still blue dots to find!
            p Click through all of the blue dots to continue.
    .ui.raised.segment#generalStep
      h2.ui.header Create An Account
      
      .ui.form(style="font-size:130%;")
        .field
          label(style="margin-bottom:1em;") Username
          div#hint1 
          input(readonly='' type="text" name='username' placeholder="username" style="margin-top:1em;")
        br
        .field
          label(style="margin-bottom:1em;") Password
          div#hint2
          input(readonly='' type="password" name="password" placeholder="password" style="margin-top:1em;")  
      #passwordStrength.ui.indicating.small.progress(style="margin-top:.5em;" data-value='0' data-total='4')
        .bar
      span#strengthLabel(style="font-weight:bold; font-size:120%;") Password Strength
      br
      br
      .ui.segment
        span(style="font-weight:bold; font-size:120%;") Try to make a very strong password! Remember to use:
        br
        .ui.basic.segment#hint3
          .ui.bulleted.list(style="font-size:120%;")
            .item uppercase letters
            .item lowercase letters
            .item numbers
            .item symbols
    button.ui.big.labeled.icon.button.cybersim2#cyberTransButton(style="margin-bottom:4em;")
        i.rocket.icon
        |   Let's Continue!      
          
block scripts
  script(src="/module_js/accounts/accounts_sim.js")
  script(src="/module_js/base_sim.js")
