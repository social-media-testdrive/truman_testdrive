extends ../ui_layout

block content

  -var cdn = "https://dhpd030vnpk29.cloudfront.net";

  .computer.only.tablet.only.four.wide.column

  .eight.wide.computer.ten.wide.tablet.sixteen.wide.mobile.column
    .ui.one.column.centered.grid
      .ui.fixed.bottom.sticky
        .ui.icon.compact.message.warning#removeHidden
          i.close.icon
          i.question.icon.float
          .content
            .ui.header Need some help? 
            p Make sure you are clicking "Got it" on the blue dots!
          
        .ui.icon.message.warning#clickAllDotsWarning
          i.close.icon
          i.hand.pointer.icon.float
          .content
            .ui.header There are still blue dots to find!
            p Click through all of the blue dots to continue.
    .ui.raised.segment#generalStep
      h2.ui.header Create An Account
      
      .ui.form
        .field
          label.addFieldSpacingBottom Username
          div#hint1 
          input.addFieldSpacingTop(readonly='' type="text" name='username' placeholder="username")
          .ui.warning.message#usernameWarning
            .header Try creating a username
        br
        .field
          label.addFieldSpacingBottom Password
          div#hint2
          input.addFieldSpacingTop(readonly='' type="password" name="password" placeholder="password")  
        .ui.warning.message#passwordWarning
          .header Try creating a password 

      #passwordStrength.ui.indicating.small.progress(data-value='0' data-total='5')
        .bar
      h3#strengthLabel Password Strength
      .ui.message.hidden#feedbackMessage
        ul#feedbackSuggestion

      //-.ui.segment
        span(style="font-weight:bold; font-size:120%;") Try to make a very strong password! Remember to use:
        br
        .ui.basic.segment
          .ui.bulleted.list(style="font-size:120%;")
            .item uppercase letters
            .item lowercase letters
            .item numbers
            .item symbols
    button.ui.big.labeled.icon.button.addBottomMargin.cybersim2#cyberTransButton
        i.rocket.icon
        |   Let's Continue!      
          
block scripts
  script(src="/module_js/accounts/accounts_sim.js")
  
block styles
  link(rel='stylesheet', href='/css/modules/accounts.css')
