  script.
    var voiceoverMappings = {
      '.showLearnSectionButton': {
        "initialDelay": 700,
        "delay": 500,
        "files": ['CUSML.8.1.1.mp3','CUSML.8.1.2.mp3']
      },
      '.voiceover_keyTerm1':  {
        "initialDelay": 700,
        "delay": 0,
        "files": ['CUSML.8.2.1.mp3']
      },
      '.voiceover_keyTerm2': {
        "initialDelay": 700,
        "delay": 0,
        "files": ['CUSML.8.2.2.mp3']
      },
      '.voiceover_keyTerm3':  {
        "initialDelay": 700,
        "delay": 0,
        "files": ['CUSML.8.2.3.mp3']
      }
    };
  script(src='/module_js/voiceover.js')
  script(src="/module_js/base_start.js")

