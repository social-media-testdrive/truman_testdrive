extends ../ui_layout

block content
  -var cdn = "https://dhpd030vnpk29.cloudfront.net";
  -var chosenTopic = user.esteemTopic[user.esteemTopic.length - 1];
  
  .ui.container.resultsAddBottomMargin
    .ui.stackable.column.grid
      .ui.column
        .insertPrint
        .ui.raised.segment.reflectionTopSegment
          h3.ui.header
            i.question.blue.icon
            .content
              | Reflect
          
          .ui.mini.green.right.labeled.icon.button.reflectionSegmentButton.voiceover_reflection1
            i.down.arrow.icon
            |   Start
          .ui.basic.segment.reflectionPromptSegment.hidden.noPadding.selectPostsQuestion1  
            .ui.label.resultsPromptLabel
              h4
                i.exclamation.triangle.icon.yellowIcon
                | Here are some posts that might have caused Jeremy to experience 
                | a red flag feeling, did you notice any of them?  
            h3.grayElement
              i.hand.pointer.icon
              | Click on the ones that you noticed!  
            .ui.stackable.three.cards.selectablePosts
              
              if (chosenTopic == 'Sports')          
                .ui.fluid.card.dim
                  .content      
                    a.left.floated(href='/user/sassystar75')
                      img.ui.avatar.image(src=cdn+'/profile_pictures/user53.jpg')
                      span='Brielle Jordan'
                  .image
                    img.post(src=cdn+'/post_pictures/bigmatch_se.jpg')
                  .content
                    .description
                      | Watching the big match with my BFF!!
                      span.grayText
                        |  — with Hayden Abbey
                .ui.fluid.card.dim
                  .content      
                    a.left.floated(href='/user/sassystar75')
                      img.ui.avatar.image(src=cdn+'/profile_pictures/user53.jpg')
                      span='Brielle Jordan'
                  .image
                    img.post(src=cdn+'/post_pictures/tryouts_se.jpg')
                  .content
                    .description
                      | Wow, can't believe I'm the only one who made it to the 
                      | next round of soccer tryouts from our group
                      span.grayText
                        |  — with Hayden Abbey, Jeremy Murray, and Corey King
                      
              if (chosenTopic == 'Gaming')  
                .ui.fluid.card.dim
                  .content      
                    a.left.floated(href='/user/asherballer')
                      img.ui.avatar.image(src=cdn+'/profile_pictures/user48.jpeg')
                      span='Asher Michaels'
                  .image
                    img.post(src=cdn+'/post_pictures/computer-game_se.jpg')
                  .content
                    .description
                      | Totally beating everyone
                      span.grayText
                        |  — with Lindsay Stokes and Asher Michaels
                .ui.fluid.card.dim
                  .content      
                    a.left.floated(href='/user/asherballer')
                      img.ui.avatar.image(src=cdn+'/profile_pictures/user48.jpeg')
                      span='Asher Michaels'
                  .image
                    img.post(src=cdn+'/post_pictures/nintendo_se.jpg')
                  .content
                    .description
                      | Playing online with my best friend  
                      span.grayText
                        |  — with Lindsay Stokes  
                      
              if (chosenTopic == 'Music')
                .ui.fluid.card.dim
                  .content     
                    a.left.floated(href='/user/frank-the-best')
                      img.ui.avatar.image(src=cdn+'/profile_pictures/user10.jpg')
                      span='Franklin Robinson' 
                  .image
                    img.post(src=cdn+'/post_pictures/concert-crowd_se.jpg')
                  .content
                    .description
                      | We missed you at the concert Jeremy!
                      span.grayText
                        |  — with Kiki Pualani
                .ui.fluid.card.dim
                  .content      
                    a.left.floated(href='/user/frank-the-best')
                      img.ui.avatar.image(src=cdn+'/profile_pictures/user10.jpg')
                      span='Franklin Robinson' 
                  .image
                    img.post(src=cdn+'/post_pictures/bestguitar_se.JPG')
                  .content
                    .description
                      | Inviting the best musicians from camp to make a song 
                      | together.
                      span.grayText
                        |  — with Kiki Pualani and Nick Thomas
          
        .ui.basic.segment.noPadding.hidden.reflectionTopSegment
          .ui.raised.segment
            .ui.mini.green.right.labeled.icon.button.reflectionSegmentButton.voiceover_reflection2
              i.down.arrow.icon
              |   Next
            .ui.basic.segment.noPadding.reflectionPromptSegment.hidden 
              .ui.label.resultsPromptLabel
                h4.reflectionPrompt(data-questionNumber='Q1')
                  | #{reflectionData.esteem.Q1.prompt}
              .ui.form
                .inline.fields
                  label
                  textarea.glowing-border(rows='2' id="literacy_responseOne")
                    
        .ui.basic.segment.noPadding.hidden.reflectionTopSegment
          .ui.raised.segment
            .ui.mini.green.right.labeled.icon.button.reflectionSegmentButton.voiceover_reflection3
              i.down.arrow.icon
              |   Next
            .ui.basic.segment.noPadding.reflectionPromptSegment.hidden 
              .ui.label.resultsPromptLabel
                h4.reflectionPrompt(data-questionNumber='Q2')
                  | #{reflectionData.esteem.Q2.prompt}
              .ui.form
                .inline.fields
                  label
                  textarea.glowing-border(rows='2' id="literacy_responseTwo")
                  
        .ui.basic.segment.noPadding.hidden.reflectionTopSegment
          .ui.raised.segment
            .ui.mini.green.right.labeled.icon.button.reflectionSegmentButton.voiceover_reflection4
              i.down.arrow.icon
              |   Next
            .ui.basic.segment.noPadding.reflectionPromptSegment.hidden 
              .ui.label.resultsPromptLabel
                h4.reflectionPrompt(data-questionNumber='Q3')
                  | #{reflectionData.esteem.Q3.prompt}
              .ui.form
                .inline.fields
                  label
                  textarea.glowing-border(rows='2' id="literacy_responseThree")

    .ui.warning.message.hidden.startPromptsWarning
      .header
        | Click "Start"
    .ui.warning.message.hidden.openAllPromptsWarning
      .header
        | Click "Next"
    include ../partials/optInToShareActivityData.pug
    br
    .ui.big.labeled.icon.button.results_print(onclick="onPrint()")
          i.right.arrow.icon
          |   Print your responses
    br
    br
    .ui.big.labeled.icon.button.resultsContinueButton
          i.rocket.icon
          |   Continue

      
