extends ../ui_layout

block content
  -var cdn = "https://dhpd030vnpk29.cloudfront.net";
  
  .ui.container
    .ui.stackable.column.grid
      .ui.column
        .insertPrint
        .ui.raised.segment
          h3.ui.header
            i.question.blue.icon
            .content
              | Reflect
          .ui.label(style="background-color:#2185d08a;color:#000000d1;")
            h4(style="float:left")
              i.exclamation.triangle.icon(style="color: #f9ff00 !important;")

              | These were the cyberbullying posts in the timeline. How many did you notice?
          br
          br
          .ui.stackable.three.cards
            
            .ui.fluid.card.dim()#card1
              .content
                .right.floated.time 1 hour ago
                a(href='/user/ella_vaderrr')
                  img.ui.avatar.image(src=cdn+'/profile_pictures/user25.jpg')
                  span Ella Sroni
              .image
                img.post(src=cdn+'/post_pictures/blackbkg.jpg')
              .content
                .description
                  | No one likes you. Why do you come to school? @
                  a(href='/user/DylanCrazzzzzy') Dylan Goldstein
        
          
            .ui.fluid.card.dim()#card2
              .content
                .right.floated.time 1 hour ago
                a(href='/user/goaliegirl')
                  img.ui.avatar.image(src=cdn+'/profile_pictures/user29.jpg')
                  span Breana Summers
              .image
                img.post(src=cdn+'/post_pictures/ewww.jpg')
              .content
                .description Dylan smells like he didn&apos;t shower for a week


            .ui.fluid.card.dim()#card3
              .content
                .right.floated.time 1 hour ago
                a(href='/user/memeking')
                  img.ui.avatar.image(src=cdn+'/profile_pictures/user34.jpg')
                  span Keegan Scott
              .image
                img.post(src=cdn+'/post_pictures/dylansketchbook.jpeg')
              .content
                .description omg lollll look at Dylan&rsquo;s sketchbook he&rsquo;s such a nerdddd
       
 
    .ui.raised.segment
      
      .ui.label(style="background-color:#2185d08a;color:#000000d1;")
        h4(style="float:left")
          | Tell us what you did to be an upstander.
      .content.checkOne
        .ui.form
          br
          .inline.fields
            label(for='iFlagged', name='iFlagged') 
            .field
              .ui.checkbox
                input(type='checkbox')
                label(for='iFlagged', style="font-size:120%;", tabindex='0') I flagged the post or comment.
        .ui.form
          .inline.fields
            label(for='iLiked', name='iLiked') 
            .field
              .ui.checkbox
                input(type='checkbox')
                label(for='iLiked', style="font-size:120%;", tabindex='0') I "liked" the target's post to show support.
        .ui.form
          .inline.fields
            label(for='iSupported', name='iSupported') 
            .field
              .ui.checkbox
                input(type='checkbox')
                label(for='iSupported', style="font-size:120%;", tabindex='0') I wrote a supportive or defending comment for the target.
        .ui.form
          .inline.fields
            label(for='wouldTell', name='wouldTell') 
            .field
              .ui.checkbox
                input(type='checkbox')
                label(for='wouldTell', style="font-size:120%;", tabindex='0') I would tell a trusted adult if I saw this kind of post.
      .ui.form
        .field
          label(for='like', style="font-size:120%;") Why did you act this way?
          label(style="font-size:120%;")
          textarea.glowing-border(rows='4' id="cyber_responseOne") 

      
    .ui.raised.segment.responseTwo
      .ui.label(style="background-color:#2185d08a;color:#000000d1;")
        h4(style="float:left")
          | Why is it important for people to act against cyberbullying?
      .ui.form
        .inline.fields
          label(style="font-size:120%;")
          textarea.glowing-border(rows='4' id="cyber_responseTwo")

    .ui.raised.segment.responseThree
      .ui.label(style="background-color:#2185d08a;color:#000000d1;")
        h4(style="float:left")
          | What will you do in the future to be an upstander if you see cyberbullying?
      .ui.form
        .inline.fields
          label(style="font-size:120%;")
          textarea.glowing-border(rows='4' id="cyber_responseThree")


    br
    .ui.big.green.labeled.icon.button(onclick="onPrint()")
          i.right.arrow.icon
          |   Print your responses
    br
    br
    .ui.big.green.labeled.icon.button.cyberbullying_end
          i.rocket.icon
          |   Finish Lesson

      
block scripts
  script().
  
    function onPrint(){
    
      $(".insertPrint").empty();
      $(".insertPrint").css('display','block');  
      $(".insertPrint").append("<h4>Tell us what you did to be an upstander.</h4>");
      $(".checkOne").clone().appendTo(".insertPrint");

      $(".insertPrint").append("<br><h4>Why did you act this way?</h4>");
      var responseOne = document.getElementById("cyber_responseOne").value;
      $(".insertPrint").append(responseOne);
      
      $(".insertPrint").append("<h4>Why is it important for people to act against cyberbullying?</h4>");
      var responseOne = document.getElementById("cyber_responseTwo").value;
      $(".insertPrint").append(responseOne);
      
      $(".insertPrint").append("<h4>What will you do in the future to be an upstander if you see cyberbullying?</h4>");
      var responseThree = document.getElementById("cyber_responseTwo").value;
      $(".insertPrint").append(responseThree);
      
      window.print();  
      
      $(".insertPrint").css('display','none');     
    }
    
    setTimeout(function(){
      $('.ui.label').transition('bounce');        
    }, 1000);


    setTimeout(function(){
      $('#card1,#card2,#card3').transition({
      animation : 'jiggle',
      duration  : 800,
      interval  : 200
      });    
    }, 2000);
