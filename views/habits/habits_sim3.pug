extends ../ui_layout
  
block content
  .computer.only.tablet.only.four.wide.column 
    .ui.sticky.sideMenu
      .ui.vertical.menu
        a.item(data-value='feed')#feedsteps 
          i.icon.home
          |  Home
        a.active.item(data-value='notifications')#notificationsteps
          i.icon.bell
          |  Notifications
  //-mobile only version of the menu
  .mobile.only.sixteen.wide.column
    .ui.top.fixed.vertical.menu
      a.item(data-value='feed')#feedsteps
        i.icon.home
        |  Home
      a.active.item(data-value='notifications')#notificationsteps      
        i.icon.bell
        |  Notifications
        .ui.red.right.pointing.label !
  #content.eight.wide.computer.eight.wide.tablet.sixteen.wide.mobile.column
    .ui.stackable.secondary.menu
      .ui.container
        .item
          button.ui.basic.button.notificationsDisplay.settingsButton
            i.cog.icon
            |   Settings
        .item
          button.ui.basic.button.notificationsDisplay#activityButton
            i.clock.icon
            |   My Activity
    .ui.container.settingsDisplay
      h2.ui.header#hint1 Notification Settings
      .ui.divider
      form.ui.form.mb-9.mt-3
        .field#hint2.mt-4
          .ui.toggle.checkbox(name='popupAlertsCheckbox')
            input(type='checkbox' name='popupAlerts')
            label Pause All
        span.settingLabel This will pause all notifications.
        .field#pauseTimeSelectField.mt-6
          label How long would you like to pause notifications for?
            br
            .ui.selection.dropdown(name='pauseTimeSelect').mt-4
              input(type='hidden')#pauseTimeSelectValue
              i.dropdown.icon
              .default.text 
              .menu
                .item(data-value='15 minutes') 15 minutes
                .item(data-value='1 hour') 1 hour
                .item(data-value='2 hours') 2 hours
                .item(data-value='4 hours') 4 hours
                .item(data-value='8 hours') 8 hours
        .ui.message.warning.hidden#confirmContinueCheck
          .ui.header 
            | Are you sure you don't want to try pausing notifications before continuing?
    //- Located at bottom so element doesn't take up space at top.
    .ui.one.column.centered.grid.feedbackMessagesGrid
      .ui.fixed.bottom.sticky
        include ../partials/messages/removeHiddenMessage     
        .ui.message.centered.success.hidden#nextPageInstruction
          .content
            .ui.header Click the "My Activity" button to continue!
        .ui.icon.message.warning.hidden#notificationWarning
          i.close.icon
          i.hand.pointer.icon.float
          .content
            .ui.header There are still blue dots to find!
            p Click through all of the blue dots before going to the activity page
  .computer.only.tablet.only.four.wide.column

block scripts
  script(src="/module_js/habits/habits_sim3.js")
  script(src='/module_js/voiceover.js')
  script(src="/module_js/base_sim.js")
  
block styles 
  link(rel='stylesheet', href='/css/modules/habits/habits_sim.css')
  link(rel='stylesheet', href='/css/sim.css')