extends ../ui_layout

block content
    .ui.text.container.mb-9
      br
      .column
        .ui.raised.segment
          .ui.blue.ribbon.label
            h3
              i.history.icon
              | &nbsp Let's review!
              
          br  
          .ui.mini.green.right.labeled.icon.button.showReviewSectionButton
            i.down.arrow.icon
            |   Next  
          .ui.basic.segment.reviewSegment.hidden
            h5.ui.header   
              .content  
                | It’s important to understand what information social media companies collect about you. When you read a website’s Privacy Policy, ASK yourself...
            
            h5.ui.header
              i.arrow.circle.right.blue.icon
              .content
                | Accessed: What will be <b>accessed</b> or collected by the company?
            
            h5.ui.header
              i.arrow.circle.right.blue.icon
              .content
                | Shared: What will be <b>shared</b> with other people or third parties?
        
            h5.ui.header
              i.arrow.circle.right.blue.icon
              .content
                | Known: What could be <b>known</b> about me if I use this?
              
            h5.ui.header
              .content
                | Also, when you sign up for a social media account, make sure you know what your <b>privacy settings</b> are and change them to something that you are comfortable with! 
            br
        br
        br
        .ui.warning.message.clickNextWarning.hidden
          .header
           | Click "Next"
        a(href='javascript:void(0);', onclick='javascript:clickGotIt();')
          .ui.big.labeled.icon.button.gotItButton
              i.rocket.icon
              |   Got it!

block scripts
  script().
    var voiceoverMappings = {
      '.showReviewSectionButton': {
        "initialDelay": 700,
        "delay": 500,
        "files": ['CUSML.7.7.1.mp3','CUSML.7.7.2.mp3','CUSML.7.7.3.mp3','CUSML.7.7.4.mp3', 'CUSML.7.7.5.mp3']
      }
    };
    var nextPage = 'free-play';
  script(src="/module_js/voiceover.js")
  script(src="/module_js/base_trans.js")
    
block styles
  link(rel='stylesheet', href='/css/trans.css')  
