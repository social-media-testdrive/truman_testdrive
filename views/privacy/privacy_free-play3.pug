block scripts
  script().
   var literacy_counter = 0;
    function startIntro(){
        var hints;
        

        hints = introJs().addHints();
        console.log('hints added')
        hints.onhintclose(function(e) {
         literacy_counter++;
         if(literacy_counter == 2) {
           $('#clickAllDotsFinal').hide();
           $( ".privacyresults" ).addClass("green");
         }
        });

          
      };
      
      $('#privacyresults').on('click', function () { 
        if(literacy_counter != 2){
          $('#clickAllDotsFinal').show();
        }
      });

      $(window).on("load", function() {startIntro();});
