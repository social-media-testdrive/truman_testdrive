extends ../ui_layout

block content
  .eight.wide.computer.ten.wide.tablet.sixteen.wide.mobile.column.centered
    .ui.one.column.centered.grid.feedbackMessagesGrid
      .ui.fixed.bottom.sticky
        include ../partials/messages/clickNextMessage
        include ../partials/messages/removeHiddenMessage
        include ../partials/messages/clickAllDotsMessage
    #step1.ui.container.mb-9
      h2.ui.header Privacy Settings
      .ui.divider
      form.ui.form.mb-6.mt-6
        .grouped.fields#hint1
          label.sectionTitle(for='account') Account Settings  
            .field.mt-5#hint2
              .ui.toggle.checkbox(name='publicToggle')
                  input(type='checkbox' name='isPrivate')
                  label Private account
            span.settingSmallLabel When your account is private, only people you approve can see your posts. 
      .ui.divider
      form.ui.form.mb-6.mt-6
        .grouped.fields
            label.sectionTitle(for='interaction') Interaction Settings
            .grouped.fields.mt-4
              label.subsectionTitle(for='contacts') Contacts
              .field.mt-5#hint3
                label.standardLabel Allow friend requests from
                  .div
                  .ui.selection.dropdown(name='friendRequestsDropdown')
                    input(type='hidden' name='friendRequests')
                    i.dropdown.icon
                    .default.text Select
                    .menu
                      .item(data-value='0') Everyone
                      .item(data-value='1') Friends of Friends
              .field.mt-5
                label.standardLabel Who can see my friends list?
                  .div
                  .ui.selection.dropdown(name='friendListDropdown')
                    input(type='hidden' name='friendList')
                    i.dropdown.icon
                    .default.text Select
                    .menu
                      .item(data-value='0') Everyone
                      .item(data-value='1') Friends of Friends
                      .item(data-value='2') Friends
                      .item(data-value='3') Only Me
            .grouped.fields.mt-6
              label.subsectionTitle(for='comments').mt-6 Comments
              .field.mt-5
                label.standardLabel Allow comments from
                  .div
                  .ui.selection.dropdown(name='commentsListDropdown')
                    input(type='hidden' name='commentsList')
                    i.dropdown.icon
                    .default.text Select
                    .default.
                    .menu
                      .item(data-value='0') Everyone
                      .item(data-value='1') Friends of Friends
                      .item(data-value='2') Friends
                      .item(data-value='3') Only Me
              .field.mt-5
                label.standardLabel Block comments from
                .div
                  select.ui.fluid.search.dropdown.blocklistDropdown(multiple='')
                    option Fake N. Ame
                    option Ima Robot
                    option Cloe Hansen
                    option Hayden Abbey
                    option Kiki Pualani
                    option Elli Andreas
                    option Lauren Wakefield
                    option Rob Yang
                    option Katherine Zhou
                    option Franklin Robinson
                    option Aidan Acosta
                    option Shika Ramphal
                    option Jason Perez
                    option Sarah Stella
                    option Keith Hernandez
                    option Elena Anderson
                    option Mary Beckett
                    option Ethan Kravitz
                    option Dylan Moore
                    option David Cole
                    option Lana Sheehan
                    option Claire Johnson
                    option Jenny Chen
                    option Ella Sroni
            .grouped.fields.mt-6                      
              label.subsectionTitle(for='tags') Tags
                .field.mt-5
                  .ui.toggle.checkbox(name='tagToggle1')
                    input(type='checkbox' name='allowTags' checked='checked')
                    label Allow people to tag me in their posts
                .field
                  .ui.toggle.checkbox(name='tagToggle2')
                    input(type='checkbox' name='addTags' checked='checked')
                    label Automatically add tagged posts in my timeline
      .ui.divider
      form.ui.form.mb-6.mt-6
        .grouped.fields
          label.sectionTitle(for='information') Location Sharing Settings
            .field.mt-5#hint4
              .ui.toggle.checkbox(name='locationToggle')
                input(type='checkbox' name='shareLocation' checked='checked')
                label Turn on location sharing
          .field.mt-5#hint5
            label.standardLabel Share my location with
              .div
              .ui.selection.dropdown(name='shareLocationWithToggle')
                input(type='hidden' name='shareLocationWith')
                i.dropdown.icon
                .default.text Select
                .menu
                  .item(data-value='0') Everyone
                  .item(data-value='1') Friends of Friends
                  .item(data-value='2') Friends
                  .item(data-value='3') Only Me
      .ui.divider
    .ui.message.warning.hidden#confirmContinueCheck
      .ui.header 
        | Are you sure you do not want to try changing some privacy settings before continuing?
    button.ui.big.labeled.icon.button.cybertrans.mb-9#cyberTransButton
      i.rocket.icon
      |   Let's Continue!

