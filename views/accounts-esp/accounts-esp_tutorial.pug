extends ../ui_layout-esp

block content

  -var cdn = "https://dhpd030vnpk29.cloudfront.net";

  .computer.only.tablet.only.four.wide.column
  .eight.wide.computer.ten.wide.tablet.sixteen.wide.mobile.column
    .ui.one.column.centered.grid.feedbackMessagesGrid
      .ui.fixed.bottom.sticky
        .ui.icon.compact.hidden.message.warning#clickNextHelpMessage
          i.close.icon
          i.question.icon.float
          .content
            .ui.header ¿Necesitas ayuda?
            p Sube y dale clic a “Siguiente” para comenzar
    .ui.raised.segment#generalStep
      h2.ui.header Crear un perfil
      .ui.form
        .field#usernameStep
          label Usuario
          input(type="text" disabled="" name='username' placeholder="username")
        .field#passwordStep
          label Contraseña
          input(type="password" disabled="" name="password" placeholder="password" onfocus="$(this).removeAttr('readonly');")

block scripts
  script(src="/module_js/accounts-esp/accounts-esp_tutorial.js")
  script(src='/module_js/voiceover.js')
  script(src="/module_js/base_introSteps.js")

block styles
  link(rel='stylesheet', href='/css/modules/accounts.css')
