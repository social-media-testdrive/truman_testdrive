    .read.rounded.right.floated.modual.info_button(id="info_"+val.id, data-info_text = val.info_text)
      i.info.icon
  .content
    if (val.module == 'digital-literacy' && val.info_text != "")  
      .description.openPostDigitalLiteracy!=val.body
    else 
      .description!=val.body
